---
import Footer from "../components/landingPage/Footer.astro";
import Header from "../components/landingPage/Header.astro";

import "../styles/landingPageGlobal.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta
      name="description"
      content="I'm Thomas a Software Developer and mountain enthusiast based in munich/germany."
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <!-- TODO remove h-screen when more content comes to the page -->
  <body class="flex h-screen flex-col bg-zinc-50 dark:bg-black">
    <Header title={title} />
    <slot />
    <Footer />
  </body>
</html>
